<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
            android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/popper_dash_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/job_detail_neighbor_profile_pic"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/popper_dash_profile_pic"
                    android:layout_gravity="center"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>

                <TextView
                    android:id="@+id/job_detail_neighbor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Carson Jones"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/job_detail_neighbor_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Neighbor"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/job_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Mowing the Lawn"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/job_detail_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Landscaping"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/job_detail_title"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/job_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Just need someone to come mow my lawn on Sunday. Can do pickup"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_below="@id/job_detail_category"
                android:layout_marginTop="10dp"
                android:layout_marginRight="56dp"
                android:layout_marginLeft="56dp"/>

            <TextView
                android:id="@+id/job_detail_details_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Details"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/job_detail_description"
                android:textSize="17sp" />

            <RelativeLayout
                android:id="@+id/job_detail_budget_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/job_detail_details_label"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay"
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/job_detail_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$60.00"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/job_detail_time_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/job_detail_budget_section"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/job_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/job_detail_date_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/job_detail_time_section"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/job_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/job_detail_location_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Location"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/job_detail_date_section"
                android:textSize="17sp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/job_detail_location_label"
                map:liteMode="true"/>
            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Accept" />

        </RelativeLayout>

    </LinearLayout>

    </RelativeLayout>



    </ScrollView>



</android.support.design.widget.CoordinatorLayout>